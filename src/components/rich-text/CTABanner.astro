---
interface Props {
  heading?: string;
  buttonText?: string;
  buttonUrl?: string;
}

const { heading, buttonText, buttonUrl } = Astro.props;
---

<div class="bg-[#F5F2ED] border border-[#E5E2DC] p-8 my-8 text-center">
  {heading && (
    <p class="font-display text-xl text-[#1A1A1A] mb-4">{heading}</p>
  )}
  {buttonText && buttonUrl && (
    <a
      href={buttonUrl}
      class="inline-flex items-center gap-2 bg-[#1A1A1A] text-white text-[11px] font-semibold tracking-[2px] px-6 py-3 hover:opacity-90 transition-opacity"
    >
      {buttonText}
      <span>â†’</span>
    </a>
  )}
</div>
