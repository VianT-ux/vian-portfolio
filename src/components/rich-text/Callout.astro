---
interface Props {
  type?: "info" | "warning" | "tip";
  heading?: string;
  text?: string;
}

const { type = "info", heading, text } = Astro.props;

const styles: Record<string, { bg: string; border: string; icon: string }> = {
  info: {
    bg: "bg-blue-50",
    border: "border-blue-200",
    icon: "ℹ",
  },
  warning: {
    bg: "bg-amber-50",
    border: "border-amber-200",
    icon: "⚠",
  },
  tip: {
    bg: "bg-emerald-50",
    border: "border-emerald-200",
    icon: "✓",
  },
};

const style = styles[type] || styles.info;
---

<div class={`${style.bg} border ${style.border} p-5 my-6`}>
  <div class="flex items-start gap-3">
    <span class="text-lg flex-shrink-0">{style.icon}</span>
    <div>
      {heading && (
        <p class="font-semibold text-[#1A1A1A] text-sm mb-1">{heading}</p>
      )}
      {text && (
        <p class="text-[14px] text-[#666666] leading-[1.6]">{text}</p>
      )}
    </div>
  </div>
</div>
