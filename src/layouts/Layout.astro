---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Growth Marketer | SE Asia", ogImage } = Astro.props;
const canonicalUrl = Astro.url.href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}

    <!-- Google Fonts: Playfair Display (Serif) + Inter (Sans) + IBM Plex Mono (Metrics) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600;700&family=Inter:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[#FDFCF9] text-[#1A1A1A] font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Typography */
    --font-display: "Playfair Display", Georgia, serif;
    --font-body: "Inter", system-ui, sans-serif;
    --font-mono: "IBM Plex Mono", monospace;

    /* Editorial Color System - Monochrome */
    --bg-page: #fdfcf9;
    --bg-surface: #f5f2ed;
    --black-primary: #1a1a1a;
    --gray-600: #666666;
    --gray-500: #999999;
    --border: #e5e2dc;
    --white: #ffffff;
    --green-success: #22c55e;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
  }

  .font-display {
    font-family: var(--font-display);
  }

  .font-sans {
    font-family: var(--font-body);
  }

  .font-mono {
    font-family: var(--font-mono);
  }

  /* Editorial tracking utilities */
  .tracking-display {
    letter-spacing: -2px;
  }

  .tracking-metric {
    letter-spacing: -1px;
  }

  .tracking-nav {
    letter-spacing: 0.5px;
  }

  .tracking-section {
    letter-spacing: 2px;
  }

  .tracking-logo {
    letter-spacing: 4px;
  }

  /* Logo Conveyor Belt Animation */
  @keyframes conveyor-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .logo-track {
    animation: conveyor-scroll 30s linear infinite;
    width: max-content;
  }

  .logo-conveyor:hover .logo-track {
    animation-play-state: paused;
  }

  .logo-conveyor {
    -webkit-mask-image: linear-gradient(to right, transparent, black 8%, black 92%, transparent);
    mask-image: linear-gradient(to right, transparent, black 8%, black 92%, transparent);
  }

  @media (prefers-reduced-motion: reduce) {
    .logo-track {
      animation: none;
    }
  }

  /* Hide scrollbar for image scroll containers */
  .image-scroll {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .image-scroll::-webkit-scrollbar {
    display: none;
  }
</style>
