---
import Layout from "../layouts/Layout.astro";

// Project data matching Pencil design
const projects = [
  {
    company: "STASHAWAY",
    metric: "3.2M+",
    description:
      "Users acquired through performance marketing campaigns across 5 markets",
  },
  {
    company: "CARSOME",
    metric: "47%",
    description:
      "Reduction in CAC while scaling monthly GMV by 2.8x year-over-year",
  },
  {
    company: "SHOPEE",
    metric: "$12M",
    description:
      "Incremental revenue attributed to CRM automation and lifecycle marketing",
  },
];
---

<Layout title="Vian | Growth Marketer">
  <!-- Masthead Navigation -->
  <header
    class="w-full border-b border-[#E5E2DC] px-6 py-5 md:px-16 flex items-center justify-between"
  >
    <div class="flex items-center gap-8">
      <!-- Logo -->
      <span class="font-display font-bold text-2xl text-[#1A1A1A] tracking-logo">
        VIAN
      </span>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        <a
          href="#"
          class="text-xs font-semibold text-[#1A1A1A] tracking-nav flex items-center gap-2"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-[#1A1A1A]"></span>
          Overview
        </a>
        <a href="#results" class="text-xs text-[#999999] tracking-nav hover:text-[#1A1A1A] transition-colors">
          Results
        </a>
        <a href="#" class="text-xs text-[#999999] tracking-nav hover:text-[#1A1A1A] transition-colors">
          About
        </a>
      </nav>
    </div>

    <div class="flex items-center gap-4">
      <!-- Resume Button -->
      <a
        href="/resume.pdf"
        download
        class="hidden md:flex items-center gap-2 bg-[#1A1A1A] text-white text-[11px] font-semibold tracking-section px-4 py-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7 10 12 15 17 10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
        RESUME
      </a>

      <!-- Avatar -->
      <div
        class="w-8 h-8 bg-[#E8E5DF] flex items-center justify-center text-[10px] font-semibold text-[#666666]"
      >
        VN
      </div>
    </div>
  </header>

  <main class="w-full max-w-[1440px] mx-auto px-6 py-12 md:px-16 md:py-12 flex flex-col gap-12">
    <!-- Hero Section -->
    <section class="flex flex-col md:flex-row md:items-start md:justify-between gap-8 md:gap-12">
      <!-- Left Content -->
      <div class="flex flex-col gap-6 md:gap-8 flex-1">
        <!-- Breadcrumb -->
        <span class="text-xs text-[#999999]">
          Portfolio / Overview
        </span>

        <!-- Headline (Playfair Display Italic) -->
        <h1
          class="font-display italic text-4xl md:text-6xl lg:text-[72px] font-normal text-[#1A1A1A] tracking-display leading-[1.1]"
        >
          I build growth engines for SE Asia's top tech brands.
        </h1>

        <!-- Subtitle -->
        <p
          class="text-base text-[#666666] leading-[1.6] max-w-[480px]"
        >
          From zero to millions in user acquisition. Data-driven strategies that
          actually scale. Specializing in performance marketing, CRM automation,
          and lifecycle optimization.
        </p>

        <!-- Meta Row -->
        <div class="flex items-center gap-4 text-xs text-[#999999]">
          <span>Updated: Jan 2026</span>
          <span class="w-1 h-1 rounded-full bg-[#999999]"></span>
          <span>Singapore</span>
        </div>
      </div>

      <!-- Photo Placeholder -->
      <div
        class="relative bg-[#F5F2ED] border border-[#E5E2DC] w-full md:w-[320px] h-[320px] md:h-[380px] flex-shrink-0 flex flex-col items-center justify-center gap-4 overflow-hidden"
      >
        <!-- Replace this div with your actual image: -->
        <!-- <img src="/images/vian-photo.jpg" alt="Vian" class="w-full h-full object-cover" /> -->

        <!-- Placeholder Content (remove when adding real photo) -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="48"
          height="48"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#999999"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
          <circle cx="9" cy="9" r="2"></circle>
          <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
        </svg>
        <span class="text-[11px] text-[#999999] tracking-nav">Your photo here</span>
        <span class="text-[10px] text-[#999999]">320 × 380px recommended</span>
      </div>
    </section>

    <!-- Section Divider: Key Metrics -->
    <div
      id="results"
      class="flex items-center justify-between border-t border-[#E5E2DC] pt-4"
    >
      <span class="text-[10px] font-bold text-[#1A1A1A] tracking-section uppercase">
        Key Results
      </span>
      <span class="text-[11px] text-[#999999]">2020 – Present</span>
    </div>

    <!-- Metric Cards (Unified Block with 1px gaps) -->
    <div class="bg-[#E5E2DC] flex flex-col md:flex-row gap-px">
      {
        projects.map((project) => (
          <article class="bg-[#FDFCF9] flex flex-col gap-3 p-6 md:p-8 flex-1">
            {/* Company Label */}
            <span class="text-[11px] font-medium text-[#999999] tracking-nav uppercase">
              {project.company}
            </span>

            {/* Metric (Monospace) */}
            <span class="font-mono text-3xl md:text-[28px] font-semibold text-[#1A1A1A] tracking-metric">
              {project.metric}
            </span>

            {/* Description */}
            <p class="text-[13px] text-[#666666] leading-[1.5]">
              {project.description}
            </p>
          </article>
        ))
      }
    </div>

    <!-- Section Divider: Quick Actions -->
    <div class="flex items-center justify-between border-t border-[#E5E2DC] pt-4">
      <span class="text-[10px] font-bold text-[#1A1A1A] tracking-section uppercase">
        Quick Actions
      </span>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-3">
      <a
        href="/resume.pdf"
        download
        class="flex items-center gap-2 border border-[#E5E2DC] px-4 py-2 text-[11px] font-medium text-[#1A1A1A] hover:bg-[#F5F2ED] transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#666666"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7 10 12 15 17 10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
        Download Resume
      </a>
      <a
        href="https://linkedin.com/in/vian"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 border border-[#E5E2DC] px-4 py-2 text-[11px] font-medium text-[#1A1A1A] hover:bg-[#F5F2ED] transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#666666"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
          <rect width="4" height="12" x="2" y="9"></rect>
          <circle cx="4" cy="4" r="2"></circle>
        </svg>
        LinkedIn
      </a>
      <a
        href="mailto:vian@example.com"
        class="flex items-center gap-2 border border-[#E5E2DC] px-4 py-2 text-[11px] font-medium text-[#1A1A1A] hover:bg-[#F5F2ED] transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#666666"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect width="20" height="16" x="2" y="4" rx="2"></rect>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
        </svg>
        Email
      </a>
    </div>
  </main>

  <!-- Footer -->
  <footer class="w-full border-t border-[#E5E2DC] px-6 py-8 md:px-16">
    <div class="max-w-[1440px] mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
      <span class="text-xs text-[#999999]">
        © 2026 Vian. Growth Marketer.
      </span>
      <span class="text-xs text-[#999999]">
        Singapore
      </span>
    </div>
  </footer>
</Layout>
